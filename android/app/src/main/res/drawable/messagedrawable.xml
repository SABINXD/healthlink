<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Header Gradient -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <gradient
            android:angle="90"
            android:endColor="#1E293B"
            android:startColor="#0F172A"
            android:type="linear" />
    </shape>

    <!-- Message Bubble User -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <gradient
            android:angle="135"
            android:endColor="#1E40AF"
            android:startColor="#0EA5E9"
            android:type="linear" />
        <corners android:radius="16dp" />
        <stroke android:width="1dp" android:color="#0EA5E9" />
    </shape>

    <!-- Message Bubble Bot -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <gradient
            android:angle="135"
            android:endColor="#475569"
            android:startColor="#64748B"
            android:type="linear" />
        <corners android:radius="16dp" />
        <stroke android:width="1dp" android:color="#64748B" />
    </shape>

    <!-- Input Background -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <solid android:color="#475569" />
        <corners android:radius="12dp" />
        <stroke android:width="1dp" android:color="#0EA5E9" />
    </shape>

    <!-- Send Button Background -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <gradient
            android:angle="90"
            android:endColor="#1E40AF"
            android:startColor="#0EA5E9"
            android:type="linear" />
        <corners android:radius="12dp" />
    </shape>

    <!-- User Avatar Background -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <gradient
            android:angle="135"
            android:endColor="#1E40AF"
            android:startColor="#0EA5E9"
            android:type="linear" />
        <corners android:radius="8dp" />
    </shape>

    <!-- Bot Avatar Background -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <gradient
            android:angle="135"
            android:endColor="#0F766E"
            android:startColor="#10B981"
            android:type="linear" />
        <corners android:radius="8dp" />
    </shape>

    <!-- Status Dots -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <solid android:color="@color/status_red" />
        <corners android:radius="50dp" />
    </shape>

    <!-- Typing Dot -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <solid android:color="@color/accent_emerald" />
        <corners android:radius="50dp" />
    </shape>
</resources>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/accent_emerald</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/darkgray</item>

        <!-- Material required attributes -->
        <item name="android:statusBarColor">@color/statusbarcolo</item>
        <item name="android:navigationBarColor">@color/bg_primary</item>
    </style>

    <!-- Optional: if you want dark theme -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yourSelectedColor</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/darkgray</item>
    </style>
</resources>

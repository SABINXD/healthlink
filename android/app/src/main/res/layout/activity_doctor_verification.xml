<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8FAFC"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/health_header_background"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor Verification"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify your medical credentials to provide professional advice"
                android:textSize="14sp"
                android:textColor="#E0F2FE"
                android:gravity="center"
                android:alpha="0.9" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FFFFFF"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#15803D"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Professional Information"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medical Specialty *"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="8dp" />

                <AutoCompleteTextView
                    android:id="@+id/spinnerSpecialty"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/health_input_background"
                    android:hint="Select your specialty"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp"
                    android:drawablePadding="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Years of Experience *"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etExperience"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/health_input_background"
                    android:hint="Enter years of experience"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:inputType="number"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medical License Number *"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etLicense"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/health_input_background"
                    android:hint="Enter medical license number"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:inputType="text"
                    android:padding="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#15803D"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Information"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number *"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/health_input_background"
                    android:hint="Enter phone number"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:inputType="phone"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address *"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/health_input_background"
                    android:hint="Enter address"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:inputType="textPostalAddress"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="City *"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#374151"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/etCity"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@drawable/health_input_background"
                            android:hint="Enter city"
                            android:textColorHint="#9CA3AF"
                            android:textColor="#1F2937"
                            android:inputType="text"
                            android:padding="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Country *"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#374151"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/etCountry"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@drawable/health_input_background"
                            android:hint="Enter country"
                            android:textColorHint="#9CA3AF"
                            android:textColor="#1F2937"
                            android:inputType="text"
                            android:padding="16dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#15803D"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Document Upload"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Citizenship Document (Front) *"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/btn_upload"
                        android:layout_marginEnd="12dp"
                        app:tint="#15803D" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tap to select citizenship document (front)"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />

                    <ImageView
                        android:id="@+id/btnUploadCitizenshipFront"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/health_icon_button_background"
                        android:src="@drawable/camera"
                        android:padding="6dp"
                        app:tint="#15803D"
                        android:contentDescription="Upload citizenship front" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivCitizenshipFront"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/health_image_preview_background"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Citizenship Document (Back) *"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/btn_upload"
                        android:layout_marginEnd="12dp"
                        app:tint="#15803D" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tap to select citizenship document (back)"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />

                    <ImageView
                        android:id="@+id/btnUploadCitizenshipBack"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/health_icon_button_background"
                        android:src="@drawable/camera"
                        android:padding="6dp"
                        app:tint="#15803D"
                        android:contentDescription="Upload citizenship back" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivCitizenshipBack"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/health_image_preview_background"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medical Certificate *"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/upload_placeholder_background"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/btn_upload"
                        android:layout_marginEnd="12dp"
                        app:tint="#15803D" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tap to select medical certificate"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />

                    <ImageView
                        android:id="@+id/btnUploadMedicalCertificate"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/health_icon_button_background"
                        android:src="@drawable/camera"
                        android:padding="6dp"
                        app:tint="#15803D"
                        android:contentDescription="Upload medical certificate" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivMedicalCertificate"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/health_image_preview_background"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <CheckBox
                    android:id="@+id/cbTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I agree to the terms and privacy policy *"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginBottom="20dp"
                    android:buttonTint="#15803D" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Submit Verification"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/health_primary_button_background"
                    android:elevation="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/layoutStatusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FEF3C7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:layout_marginEnd="12dp"
                    app:tint="#D97706" />

                <TextView
                    android:id="@+id/tvStatusMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status message will appear here"
                    android:textSize="14sp"
                    android:textColor="#92400E" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

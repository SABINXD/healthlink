<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:padding="20dp"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:elevation="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚨 EMERGENCY SOS 🚨"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚨 Nepal Emergency Numbers"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="20dp"
                android:gravity="center" />
            <LinearLayout
                android:id="@+id/police_container"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#E3F2FD"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="👮"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:background="#2196F3"
                    android:textColor="#FFFFFF" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="POLICE"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📞 TAP TO CALL"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:padding="8dp"
                    android:background="#FFFFFF" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fire_container"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#FFEBEE"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="🚒"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:background="#FF5722"
                    android:textColor="#FFFFFF" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FIRE DEPARTMENT"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="101"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FF5722" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📞 TAP TO CALL"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:padding="8dp"
                    android:background="#FFFFFF" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ambulance_container"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#E8F5E8"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="🚑"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:background="#4CAF50"
                    android:textColor="#FFFFFF" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMBULANCE"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="102"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📞 TAP TO CALL"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:padding="8dp"
                    android:background="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏥 Other Emergency Services"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />
            <LinearLayout
                android:id="@+id/helpline_container"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFF3E0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="📞"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="#FF9800"
                    android:textColor="#FFFFFF" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Helpline"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="103"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CALL"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:padding="6dp"
                    android:background="#FFFFFF" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tourist_container"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#F3E5F5"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="🗺️"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="#9C27B0"
                    android:textColor="#FFFFFF" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tourist Helpline"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1144"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#9C27B0" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CALL"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#9C27B0"
                    android:padding="6dp"
                    android:background="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
        <!-- NEW SECTION: My Emergency Contacts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👥 My Emergency Contacts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />
            <Button
                android:id="@+id/add_contact_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="➕ Add Emergency Contact"
                android:background="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />
            <!-- Container for dynamically added contacts -->
            <LinearLayout
                android:id="@+id/contacts_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Sample contact item - this will be replaced in code -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#E8EAF6"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="👤"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="#3F51B5"
                        android:textColor="#FFFFFF" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Name"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#3F51B5" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/call_contact_button"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="📞"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:background="#4CAF50"
                            android:layout_marginEnd="8dp" />
                        <Button
                            android:id="@+id/delete_contact_button"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="🗑️"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:background="#F44336" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/no_contacts_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No emergency contacts added yet"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>
        <Button
            android:id="@+id/sos_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="🆘 EMERGENCY SOS ALERT 🆘"
            android:background="#FF0000"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="8dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap any emergency number above to open dialer and call immediately"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="#E0E0E0" />
    </LinearLayout>
</ScrollView>
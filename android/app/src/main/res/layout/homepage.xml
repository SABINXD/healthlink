<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homepage_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FFFE"
    tools:context=".HomePage">

    <!-- Emergency Banner - Critical Care Red -->
    <androidx.cardview.widget.CardView
        android:id="@+id/emergency_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#E53E3E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_emergency_medical"
                android:layout_marginEnd="12dp"
                app:tint="#FFFFFF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMERGENCY MEDICAL HELP"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap for immediate assistance"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:alpha="0.9" />
            </LinearLayout>

            <Button
                android:id="@+id/emergency_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/emergency_button_bg"
                android:text="SOS"
                android:textColor="#E53E3E"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingHorizontal="20dp"
                android:elevation="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Medical Header Toolbar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emergency_card"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top Row with Logo and Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="HealthConnect Logo"
                    android:scaleType="fitStart"
                    android:src="@drawable/big_logo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#E6F7FF">

                        <ImageView
                            android:id="@+id/notifications_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="Medical Notifications"
                            android:src="@drawable/ic_medical_notifications"
                            app:tint="#1890FF" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F6FFED">

                        <ImageView
                            android:id="@+id/send"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="Medical Chat"
                            android:src="@drawable/ic_medical_chat"
                            app:tint="#52C41A" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Health Status Banner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/health_status_bg"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_health_check"
                    android:layout_marginEnd="8dp"
                    app:tint="#52C41A" />

                <TextView
                    android:id="@+id/health_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your health journey continues"
                    android:textColor="#52C41A"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    android:textColor="#1890FF"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Medical Feed Content -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_card"
        android:layout_above="@id/medical_bottom_nav"
        android:layout_marginHorizontal="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFeed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:overScrollMode="never"
            tools:listitem="@layout/item_post" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Enhanced Medical Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/medical_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp">

            <!-- Health Home -->
            <LinearLayout
                android:id="@+id/nav_home_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/nav_item_selected_bg">

                <ImageView
                    android:id="@+id/nav_home"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/home"
                    android:contentDescription="Health Home"
                    app:tint="#1890FF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="10sp"
                    android:textColor="#1890FF"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Medical Search -->
            <LinearLayout
                android:id="@+id/nav_search_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/nav_search"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/search_24px"
                    android:contentDescription="Find Doctors"
                    app:tint="#8C8C8C" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textSize="10sp"
                    android:textColor="#8C8C8C"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Health Post -->
            <LinearLayout
                android:id="@+id/nav_post_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <androidx.cardview.widget.CardView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#52C41A">

                    <ImageView
                        android:id="@+id/nav_post"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add"
                        android:contentDescription="Share Health Experience"
                        app:tint="#FFFFFF" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:textSize="10sp"
                    android:textColor="#8C8C8C"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Medical Alerts -->
            <LinearLayout
                android:id="@+id/nav_notifications_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/nav_notifications"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        android:contentDescription="Medical Alerts"
                        app:tint="#8C8C8C" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/notification_badge"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="-4dp"
                        android:layout_marginEnd="-4dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FF4D4F"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="3"
                            android:textColor="#FFFFFF"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:gravity="center" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alerts"
                    android:textSize="10sp"
                    android:textColor="#8C8C8C"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Appointments -->
            <LinearLayout
                android:id="@+id/nav_appointments_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/nav_appointments"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/calendar1"
                    android:contentDescription="Medical Appointments"
                    app:tint="#8C8C8C" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointments"
                    android:textSize="10sp"
                    android:textColor="#8C8C8C"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Health Profile -->
            <LinearLayout
                android:id="@+id/nav_profile_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/nav_profile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/person_24px"
                    android:contentDescription="Health Profile"
                    app:tint="#8C8C8C" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="10sp"
                    android:textColor="#8C8C8C"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>